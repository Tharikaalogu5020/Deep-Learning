import tensorflow as tf
from tensorflow.keras.preprocessing.text import Tokenizer
from tensorflow.keras.preprocessing.sequence import pad_sequences
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Embedding, LSTM, Dense, Dropout
from sklearn.model_selection import train_test_split
import numpy as np

# Example dataset (replace with your spam dataset)
texts = ['free money now', 'hi how are you', 'win lottery', 'hello friend', 'claim prize']
labels = [1, 0, 1, 0, 1]  # 1=spam, 0=not spam

tokenizer = Tokenizer(num_words=1000)
tokenizer.fit_on_texts(texts)
sequences = tokenizer.texts_to_sequences(texts)
x = pad_sequences(sequences, maxlen=5)
y = np.array(labels)

x_train, x_val, y_train, y_val = train_test_split(x, y, test_size=0.2)

# Hyperparameters to tune
dropout_rates = [0.2, 0.5]
learning_rates = [0.01, 0.001]

for dropout_rate in dropout_rates:
    for lr in learning_rates:
        model = Sequential([
            Embedding(1000, 16, input_length=5),
            LSTM(32),
            Dropout(dropout_rate),
            Dense(1, activation='sigmoid')
        ])
        model.compile(optimizer=tf.keras.optimizers.Adam(learning_rate=lr),
                      loss='binary_crossentropy',
                      metrics=['accuracy'])
        print(f"Training with dropout={dropout_rate} and lr={lr}")
        model.fit(x_train, y_train, epochs=5, verbose=0)
        loss, acc = model.evaluate(x_val, y_val, verbose=0)
        print(f"Validation accuracy: {acc:.4f}")
